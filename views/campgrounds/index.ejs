<%- include ('../partials/header') %>

<div class="container" style="padding: 30px;"> 
    <header class="jumbotron">
         <div class="container">
            <h1>Welcome to Yelp Camps!!</h1>
            <p>View our Hand-picked Campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>


   <div class="row" style="display: flex; flex-wrap: wrap;">
    <% camps.forEach((camp)=>{ %>
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail"> 
                    <img class="img-fluid" src="<%= camp.image %>" >
                    <div class="caption"> 
            <h4 style="text-align: center; padding: 10px;"><%= camp.name %></h4>
                    </div>
                      <div style="text-align: center; padding-bottom: 10px;">
                        <a  href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
                      </div>
                </div>
            </div> 
        <% }); %>
    </div>

</div>   


<%- include ('../partials/footer') %>

