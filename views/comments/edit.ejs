<%- include ('../partials/header') %>

<div class="container">
    <div class="row">
        <div class="container">
        <h1 style="text-align: center; padding: 30px;">Edit Comment</h1>
        </div>
        <div style="width: 30%; margin: 0 auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                     <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
                </div>
                  
                <div class="form-group">    
                     <button class="btn btn-large btn-primary btn-block">Update Comment</button>  
                </div>
            </form>
            <a href="/campgrounds">Go back</a>            
        </div>
    </div>
</div>

<%- include ('../partials/footer') %>